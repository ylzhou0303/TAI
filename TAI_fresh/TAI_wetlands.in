END


#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet
  TIME_UNITS hr
  CONSTRAINT_LIST
    0.d0 initial 
  /
END


TRANSPORT_CONDITION O2_exchange
  TYPE dirichlet
  TIME_UNITS hr
  CONSTRAINT_LIST
   0.d0 O2_exchange
   
  /
END

TRANSPORT_CONDITION O2_inj
